{% extends 'base-empty.html.twig' %}
{% block body %}
    <div class="page-404 section--bg" data-bg="{{ asset('img/section/section.jpg') }}">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="page-404__wrap">
                        <div class="page-404__content">
                            <h1 class="page-404__title">{{ status_code }}</h1>
                            <p class="page-404__text">{{ 'error.standard'|trans }}<br>{{ status_text }}</p>
                            <a href="{{ path('homepage') }}" class="page-404__btn">{{ 'global.back'|trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}